@model ProductCreateVM
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="col-md-10">
        <h1>Create new product</h1>
        <form asp-action="create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name">Product name</label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
                <span class="text-danger" asp-validation-for="Name"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description">Product description</label>
                <input asp-for="Description" type="text" class="form-control" placeholder="Enter description">
                <span class="text-danger" asp-validation-for="Description"></span>

            </div>
            <div class="form-group">
                <label asp-for="Photo">Image</label>
                <input asp-for="Photo" type="file" class="form-control" placeholder="Image">
                <span class="text-danger" asp-validation-for="Photo"></span>

            </div>
            <div class="form-group">
                <label asp-for="Price">Product price</label>
                <input asp-for="Price" step=".01" type="number" class="form-control" placeholder="Enter price">
                <span class="text-danger" asp-validation-for="Price"></span>

            </div>
            <div class="form-group">
                <label>Category</label>
                @Html.DropDownListFor(model => model.CategoryId, ViewBag.ProductCategories as SelectList, "-- Select Category --", new{@class="form-control"})
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


