

@model AboutVM
@{
    ViewData["Title"] = "About";
}

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 position-relative overlay-bottom">
    <div class="d-flex flex-column align-items-center justify-content-center pt-0 pt-lg-5" style="min-height: 400px">
        <p class="display-4 mb-3 mt-0 mt-lg-5 text-white text-uppercase">About Us</p>
        <div class="d-inline-flex mb-lg-5">
            <p class="m-0 text-white"><a class="text-white" href="">Home</a></p>
            <p class="m-0 text-white px-2">/</p>
            <p class="m-0 text-white">About Us</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="section-title">
            <p class="text-primary text-uppercase" style="letter-spacing: 5px;">About Us</p>
        </div>
        <div class="row">
            <div class="col-lg-4 py-0 py-lg-5">
                <h3 class="mb-3">@Model.AboutFeatures[0].TitleFirst</h3>
                <p>@Model.AboutFeatures[0].DescriptionFirst</p>
            </div>
            <div class="col-lg-4 py-5 py-lg-0" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100" src="~/uploads/about/@Model.AboutFeatures[0].ImageUrl" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-4 py-0 py-lg-5">
                <h3 class="mb-3">@Model.AboutFeatures[0].TitleSecond</h3>
                <p>@Model.AboutFeatures[0].DescriptionSecond</p>
                <p>@Model.AboutFeatures[0].AddedTextFirst</p>
                <p class="mb-3"><i class="fa fa-check text-primary mr-3"></i>@Model.AboutFeatures[0].AddedTextSecond</p>
                <p class="mb-3"><i class="fa fa-check text-primary mr-3"></i>@Model.AboutFeatures[0].AddedTextThird</p>
            </div>
            <div class="col-lg-12 py-0 py-lg-5 text-center">
                <h3 class="mb-3">@Model.AboutFeatures[0].TitleThird</h3>
                <p>@Model.AboutFeatures[0].DescriptionThird</p>
            </div>
        </div>
    </div>
</div>
<!-- About End -->